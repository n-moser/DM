<project name="com.moser.dm2.model" basedir="." default="fetch">

	<property file="../com.moser.dm2/conf/build/common_build.properties"/>
	<import file="../com.moser.dm2/conf/build/common_build.xml" />
	
	<property file="build.properties" />

	<!--
	##################################################################################
	##
	## Fetches the dependencies transitively.
	##
	##################################################################################
	-->
	<target name="fetch" depends="fetch.base" description="Fetches the required libraries">
		
	</target>
	
	<!--
	##################################################################################
	##
	## Fetches the UI Dependencies.
	##
	##################################################################################
	-->
	<target name="fetch.base">
		<ant antfile="../com.moser.dm2/build.xml" target="jar" inheritall="false"/>
		
		<copy todir="${dir.lib}">
			<fileset dir="../com.moser.dm2/out/ant/dist">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="../com.moser.dm2/lib">
				<include name="*.jar"/>
			</fileset>
		</copy>	
	</target>
</project>